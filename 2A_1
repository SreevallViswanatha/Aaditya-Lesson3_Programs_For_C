#include <stdio.h>
#include <stdlib.h>
//Write a program in C which is a Menu-Driven Program to perform a simple calculation.
//Take two numbers and input the options: 1 for addition, 2 for subtraction, 3 for multiplication, 4 for division, 5 for exit. Perform the operations and display the results.
int main()
{
    int number, number2, num;
    printf("Enter a number:");
    scanf("%d", &number);
    printf("Enter another number:");
    scanf("%d", &number2);
    printf("Enter 1 for addition, 2 for subtraction, 3 for multiplication, 4 for division, and 5 for exit:");
    scanf("%d", &num);
    switch(num)
    {
    case 1:
        printf("The sum is:%d", number+number2);
        break;
    case 2:
        printf("The difference is:%d", number-number2);
        break;
    case 3:
        printf("The result is:%d", number2*number);
        break;
    case 4:
        printf("The result is:%d", number/number2);
        break;
    case 5:
        break;
    default:
        printf("Wrong number.");
    }
}

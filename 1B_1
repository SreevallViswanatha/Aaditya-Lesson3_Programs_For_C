#include <stdio.h>
#include <stdlib.h>
//Write a program in C to read any Month Number in integer and display the number of days for this month.
int main()
{
    int month;
    printf("Enter the month:");
    scanf("%d", &month);
    switch(month)
    {
    case 1:
        printf("Month has 31 days.");
        break;
    case 2:
        printf("Month has 28 or 29 days.");
        break;
    case 3:
        printf("Month has 31 days.");
        break;
    case 4:
        printf("Month has 30 days.");
        break;
    case 5:
        printf("Month has 31 days.");
        break;
    case 6:
        printf("Month has 30 days.");
        break;
    case 7:
        printf("Month has 31 days.");
        break;
    case 8:
        printf("Month has 31 days.");
        break;
    case 9:
        printf("Month has 30 days.");
        break;
    case 10:
        printf("Month has 31 days.");
        break;
    case 11:
        printf("Month has 30 days.");
        break;
    case 12:
        printf("Month has 31 days.");
        break;
    default:
        printf("No month like that.");
    }
}
